{
  "name": "bodykind Char Counter",
  "version": "2.0.0",
  "description": "Counts and displays the number of chars in many char restricted fields of the bodykind CMS.",
  "icons" : {"128": "icon_128.png", "16" : "icon_16.png"},
  "permissions": [
    "tabs", 
    "contextMenus",
    "http://www.bodykind.com/admin/EcomProducts.aspx*",
    "http://newadmin.bodykind.com/admin/EcomProducts.aspx*",
    "http://test2.bodykind.com/admin/EcomProducts.aspx*",
    "http://www.bodykind.com/admin/Promotion.aspx*",
    "http://newadmin.bodykind.com/admin/Promotion.aspx*"
  ],
  "content_scripts":[{
		"matches":[
			"http://newadmin.bodykind.com/admin/EcomProducts.aspx*",
			"http://www.bodykind.com/admin/EcomProducts.aspx*",
			"http://test2.bodykind.com/admin/EcomProducts.aspx*",
    	"http://www.bodykind.com/admin/Promotion.aspx*",
    	"http://newadmin.bodykind.com/admin/Promotion.aspx*"
		],
		"js":["contentscript.js"]
	}],
  "options_page" : "options.html",
  "background_page": "background.html"
}